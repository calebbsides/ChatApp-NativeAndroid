<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:id="@+id/create_account_fragment">

    <TextView
            android:text="Create Account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.07999998"
            android:textSize="30sp"
            android:textColor="@color/colorPrimaryLight"/>

    <android.support.constraint.Guideline
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/guideline"
            app:layout_constraintGuide_begin="300dp"
            android:orientation="horizontal"/>

    <EditText
            android:background="@drawable/input_style"
            android:layout_height="56dp"
            android:inputType="textEmailAddress"
            android:ems="10"
            android:id="@+id/create_email_input"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/guideline"
            android:hint="Email"
            android:singleLine="true"
            android:selectAllOnFocus="true"
            android:layout_width="300dp"/>

    <EditText
            android:background="@drawable/input_style"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/create_password_input"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/guideline"
            android:hint="Password"/>

    <EditText
            android:background="@drawable/input_style"
            android:layout_width="300dp"
            android:layout_height="56dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/create_password_confirm_input"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="Confirm Password" app:layout_constraintTop_toBottomOf="@+id/create_password_input"
            android:layout_marginTop="8dp"/>
    <Button
            android:text="Create Account"
            android:layout_width="150dp"
            android:layout_height="56dp"
            android:id="@+id/create_submit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="200dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorPrimaryLight"
            android:layout_marginEnd="17dp"
            style="@style/Widget.AppCompat.Button.Borderless"/>

    <Button
            android:text="Back to Login"
            android:layout_width="150dp"
            android:layout_height="56dp"
            android:id="@+id/back_to_login"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="16dp"
            android:background="@color/colorPrimary"
            android:textColor="@color/colorPrimaryLight"
            android:layout_marginEnd="32dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_marginStart="32dp" app:layout_constraintHorizontal_bias="1.0"/>

</android.support.constraint.ConstraintLayout>